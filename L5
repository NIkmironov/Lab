#include <stdio.h>
#include <math.h>

void first()
{
  float x1 = 4; 
  float x2 = 7;
  float y1 = 9;
  float y2 = 3;
  float length;
  length = sqrt((x2 - x1)*(x2 - x1) + (y2 - y1)*(y2 - y1)); 
  printf_s("1)");
  printf_s("%f", length);

};

void second()
{
  int A = 2;
  int B = 4;
  int C = 7;
  int AC = C - A; 
  int BC = C - B; 
  int sum = AC + BC; 
   printf_s("2)");
  printf_s("%i\n", AC); 
  printf_s("%i\n", BC);
  printf_s("%i", sum);
};

void third()
{
  int A = 2;
  int B = 4;
  int C = 7;
  int AC = C - A; 
  int BC = B - C;
  int sum = AC * BC; 
  printf_s("3)");
  printf_s("%i", sum);
};

void fourth()
{
  int x1 = 7; 
  int x2 = 6;
  int y1 = 5;
  int y2 = 4;
  int a = x2 - x1; 
  int b = y2 - y1;
  int p = 2 * a + 2 * b; 
  int s = a * b; 
   printf_s("4)");
  printf_s("%i\n", p); 
  printf_s("%i", s);

};
int main()
{ first();
  second();
  third();
  fourth();

  float x1 = 77; 
  float x2 = 66;
  float x3 = 55;
  float y1 = 44;
  float y2 = 33;
  float y3 = 22;
  float a = sqrt((x2 - x1) * (x2 - x1) + (y2 - y1) * (y2 - y1)); 
  float b = sqrt((x1 - x3) * (x1 - x3) + (y3 - y1) * (y3 - y1));
  float c = sqrt((x2 - x3) * (x2 - x3) + (y3 - y2) * (y3 - y2));
  float p = a + b + c; 
  float p2 = (a + b + c) / 2; 
  float s = sqrt(p2 * (p2 - a) * (p2 - b) * (p2 - c)); 
  
  printf_s("5)");
  printf_s("%f\n", p);
  printf_s("%f", s);

  return 0;
}
